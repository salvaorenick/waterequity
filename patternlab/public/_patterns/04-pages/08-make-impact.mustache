{{> organisms-header }}
<div class="container-fluid hero img-bg" style="background-image: url(https://waterequity.s3.amazonaws.com/media/filer_public/6e/5a/6e5a0a92-3b24-4cdd-907e-446c0da92efc/make-a-loan-for-the-people.jpg); background-attachment: fixed">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-12 center-block text-center">
                <h2 class="color--white ribbon-bg">Make an loan<br>Make an impact</h2>
            </div>
        </div>
    </div>
</div>
<div id="make-loan" class="container-fluid container_padding--medium background--xtra-light-blue text-center">
    <div class="row">
        <div class="col-md-8 center-block text-center">
            <h2>Make a loan</h2>
            <form id="loanForm" class="form-horizontal text-left center-block">
                <div class="form-group row" data-toggle="buttons">
                    <label class="radio-inline radio btn col-xs-1" for="radio-value">
                        <input type="radio" min="100" class="amount" name="amount" id="radio-value" data-stripe="amount" /> <h2 class="dollar-only">$</h2>
                    </label>
                    <div class="col-sm-3 col-xs-6">
                        <input type="tel" class="form-control input-value" />
                    </div>
                    <span class="col-sm-7 col-xs-11" style="padding-right: 0">$100 is all it takes to make an impact</span>
                    <br>
                    <label class="radio-inline radio btn col-xs-4 active" for="230">
                        <input class="averageAmount" type="radio" name="amount" id="230" data-stripe="amount" value="230" checked /> <h2>$230</h2>
                    </label>
                    <span class="col-sm-7 col-xs-12" style="padding-right: 0; margin-top: -9px">Brings water or the dignity of a toilet to a family living in the crisis</span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-8">
                        <label>Card Number:</label>
                        <input type="tel"
                            class="form-control cc-number"
                            data-stripe="number"
                            autocomplete="cc-number"
                            required creditcard />
                    </div>
                    <div class="col-sm-4">
                        <label>Expires:</label>
                        <input type="text"
                            class="form-control cc-exp"
                            placeholder="MM/YY"
                            data-stripe="exp"
                            autocomplete="cc-exp"
                            required />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-8">
                        <label>Name on Card:</label>
                        <input type="text"
                            class="form-control name"
                            autocomplete="name"
                            data-stripe="name"
                            name="name"
                            required />
                    </div>
                    <div class="col-sm-4">
                        <label>Card Code:</label>
                        <input type="text"
                            class="form-control cc-cvc"
                            placeholder="CVC"
                            autocomplete="off"
                            required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12">
                        <label>Email Address: <em>We'll use this to update you on your loan</em></label>
                            <input type="email"
                                class="form-control email"
                                autocomplete="email"
                                data-stripe="email-address"
                                name="email-address"
                                required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-6">
                        <label>Zip:</label>
                        <input type="text"
                            class="form-control"
                            autocomplete="postal-code"
                            data-stripe="address_zip" />
                    </div>
                    <div class="col-xs-6">
                        <label>Country:</label>
                        <input type="text"
                            class="form-control"
                            autocomplete="billing country"
                            data-stripe="address_country" />
                    </div>
                </div>
                <div class="row" style="margin-top: 34px">
                    <div class="form-group checkbox col-sm-8 col-xs-12 center-block" data-toggle="buttons" >
                        <label class="btn check-inline check color--white center-block" for="agree">
                          <input type="checkbox" value="true" name="accept-terms" id="agree" required />
                          <span class="col-xs-12 accept">I accept terms of agreement </span>
                        </label>
                    </div>
                </div>
                <a href="/terms-of-use/" class="terms" target="_blank">WaterEquity Terms of Use Agreement</a>
                <div class="payment-errors alert alert-warning collapse"></div>
                <div class="form-group text-center ">
                    <input type="submit" class="btn lend" value="Confirm Payment" />
                </div>
            </form>
            <div class="col-md-9 center-block padding-54 background--light-blue color--white thanks">
                <h2>Thank you for your loan!</h2>
                <p>Please check your inbox for a confirmation email. If you have any questions please email us at <a href="mailto:info@waterequity.org" class="color--white">info@waterequity.org</a> or call <a href="tel:8168008100" class="color--white">(816) 800-8100</a>.</p>
            </div>
            <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
            <script src="http://js.stripe.com/v2/"></script>
            <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.js"></script>
            <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.payment/3.0.0/jquery.payment.min.js"></script>
            <script>
                var formValidator;

                $(function($) {
                    var form = $('#loanForm');

                    Stripe.setPublishableKey('{{stripe_public_key}}');

                    $.validator.addMethod('emailAddress', function (value, element) {
                        var regex = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                        return regex.test(element.value);

                    }, 'Incorrectly formatted email address. We will you use this to track your loan.');

                    $.validator.setDefaults({
                        ignore: 'amount'
                    });

                    formValidator = form.validate({
                        rules: {
                            'email-address': {
                                emailAddress: true,
                                required: true
                            }
                        },
                        errorPlacement: function(error, element) {
                            var obj = $('[name="'+element.attr('name')+'"]');
                            if (obj.length > 1) {
                                error.delay(1500).insertAfter(obj.last().parent());
                            } else {
                                error.delay(1500).appendTo(element.parent($('div.form-group')));
                            }
                        }
                    });

                    function classToggler(element, trueOrFalse) {
                        if (trueOrFalse) {
                            $(element).removeClass('error');
                        } else {
                            $(element).addClass('error');
                        }
                    }

                    function regexErrorToggler(element, regex) {
                        if (regex.test(element.value) === false || element.value < 2 ) {
                            classToggler(element, false);
                        } else {
                            classToggler(element, true);
                        }
                    }

                    function messageToggler(element, message) {
                        if ($(element).hasClass('error')){
                            $(element).after('<label class="error">' + message + '</label>')
                        }
                    }

                    $('.input-value').focusout(function() {
                        if (this.value <= 500000 && this.value >= 100) {
                            classToggler(this, true);
                            $(this).next('label.error').remove();
                        } else {
                            classToggler(this, false);
                            $(this).after('<label class="error">Please loan between $100 and $500,000.</label>');
                        }
                    });

                    $('.radio').on('click', function(){
                        if ($(this).find('input').attr('value') >= 100 && $(this).find('input').attr('value') <= 500000) {
                            $(this).parent('.form-group').find('label.error').remove();
                            $(this).parent('.form-group').find('input.error').removeClass('error');
                        }
                    });

                    $('[data-numeric]').payment('restrictNumeric');
                    $('.cc-exp').payment('formatCardExpiry');
                    $('.cc-number').payment('formatCardNumber');
                    $('.cc-cvc').payment('formatCardCVC');

                    $.fn.toggleInputError = function(erred) {
                        this.toggleClass('error', erred);
                        return this;
                    };

                    form.submit(function(e) {
                        e.preventDefault();

                        $('.cc-number').toggleInputError(!$.payment.validateCardNumber($('.cc-number').val()));
                        $('.cc-exp').toggleInputError(!$.payment.validateCardExpiry($('.cc-exp').payment('cardExpiryVal')));
                        $('.cc-cvc').toggleInputError(!$.payment.validateCardCVC($('.cc-cvc').val(), cardType));

                        if (formValidator.errorList.length === 0) {
                            var $form = $(e.target);
                            Stripe.card.createToken($form, function(status, response) {
                                if (response.error) {
                                    $form.find('.payment-errors').text(response.error.message).show();
                                } else {
                                    $form.find('input[name="stripeToken"]').remove();
                                    $form.append($('<input type="hidden" name="stripeToken" />').val(response.id));
                                    // You can submit the form to back-end as usual
                                    $.ajax({
                                        type: 'POST',
                                        url: '/make-loan/create-loan/',
                                        data: $form.serialize(),
                                        success: function(response) {
                                            loanFormSuccess();
                                        },
                                        error: function(response) {
                                            $form.find('.payment-errors').text(response.responseJSON.message).show();
                                        }
                                    });
                                }
                            });
                        } else {
                            form.find('.payment-errors').text('Please check your work and try again.').show();
                        }
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</div>
{{> organisms-footer }}
